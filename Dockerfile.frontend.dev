FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install all dependencies (including dev dependencies)
RUN npm install

# Install missing dependencies
RUN npm install @heroicons/react react-icons

# Copy source code
COPY . .

# Expose port
EXPOSE 5173

# Run in development mode with Vite dev server for hot reload
CMD ["npm", "run", "dev"]